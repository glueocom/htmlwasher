{
	"name": "htmlsanitization-server",
	"version": "1.0.0",
	"description": "",
	"main": "./src/index.ts",
	"scripts": {
		"schema:generate": "mkdir -p dist && ts-json-schema-generator --path src/schema/sanitize-config.ts --type SanitizeConfigSchema --no-top-ref -o dist/schema.json",
		"build": "pnpm run schema:generate",
		"test": "pnpm run schema:generate && jest",
		"test:watch": "jest --watch",
		"test:coverage": "pnpm run schema:generate && jest --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"pack:folder": "zsh -c 'pnpm run schema:generate && cp dist/schema.json schema.json && rm -rf package-out && mkdir -p package-out && pnpm pack --pack-destination package-out && rm schema.json && cd package-out && tar -xzf *.tgz --strip-components=1 && rm -f *.tgz'",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "pnpm typecheck && pnpm test"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@swc/core": "^1.15.3",
		"@swc/jest": "^0.2.39",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.1",
		"@types/sanitize-html": "^2.16.0",
		"jest": "^30.2.0",
		"ts-json-schema-generator": "^2.4.0",
		"typescript": "^5.9.3"
	},
	"type": "module",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		},
		"./schema.json": "./schema.json",
		"./*": {
			"import": "./src/*.ts",
			"types": "./src/*.ts"
		}
	},
	"files": [
		"src/**/*.ts",
		"!src/**/*.test.ts",
		"schema.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"ajv": "^8.17.1",
		"sanitize-html": "^2.17.0",
		"yaml": "^2.8.2"
	}
}
